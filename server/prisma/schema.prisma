datasource db {
  provider = "mysql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id    Int     @id @default(autoincrement())
  label String
  done  Boolean @default(false)
}

model Article {
  id    Int    @id @default(autoincrement())
  title String
  body  String
}

model User {
  id         Int    @id @default(autoincrement())
  cognito_id String

  userProfile UserProfile? @relation("UserProfile")
}

model UserProfile {
  id Int      @id @default(autoincrement())
  userId Int  @unique

  user        User @relation(name: "UserProfile", fields: [userId], references: [id])
}